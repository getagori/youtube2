<div class="container">

  <div class="row">
    <div class="d-flex  mx-auto">
      <div class="col-xs-6 col-md-6 col-lg-12 mt-5 text-center">
        <div class="card img-thumbnail border-secondary">

          <img class="card-img-top">

            <%= image_tag @post.image_url(:thumb)%>

          </img>

          <div class="card-body ">

            <h5 class="card-title">
              <strong>
                <%= @post.title %>
              </strong>

            </h5>

            <div class="card-text  ">
              <p><%= @post.content %></p>
            </div>
          </div>
        </div>
      </div>
