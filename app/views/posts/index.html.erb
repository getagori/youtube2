<div class="container">

  <div class="d-flex justify-content-between">
    <div class="row">
      <% if user_signed_in? %>
        <% @posts.each do |post| %>

          <div class="col-xs-6 col-md-6 col-lg-4 mt-5 mb-2 text-center ">
            <div class="card img-thumbnail border-primary">

              <img class="card-img-top">
                <%= link_to post_path(post) do %>
                <%= image_tag post.image_url(:thumb)%>
              <% end %>
            </img>

            <div class="card-body  ">

              <h5 class="card-title ">
                <strong>
                  <%= post.title %>
                </strong>

              </h5>

              <div class="card-text  ">
                <p><%= post.content %></p>
              </div>

            </div>

          </div>
        </div>
      <% end %>
    <% else %>
      <p>ログインしてください</p>
    <% end %>
  </div>
</div>
</div>
